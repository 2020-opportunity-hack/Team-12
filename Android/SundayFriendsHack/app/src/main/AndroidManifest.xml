<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.learnandearn.sundayfriends"
    tools:ignore="GoogleAppIndexingWarning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait"
        android:name=".BaseApplication">


        <activity android:name="com.learnandearn.sundayfriends.ui.user.UserActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity android:name="com.learnandearn.sundayfriends.ui.admin.AdminActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity android:name="com.learnandearn.sundayfriends.ui.login.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>