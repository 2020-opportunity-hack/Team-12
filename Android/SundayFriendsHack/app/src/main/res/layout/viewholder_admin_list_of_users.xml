<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vh_adminusers_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vh_adminusers_user_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_circle_dark_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vh_adminusers_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/vh_adminusers_email"
        app:layout_constraintEnd_toStartOf="@+id/vh_adminusers_balance"
        app:layout_constraintStart_toEndOf="@id/vh_adminusers_user_profile_pic"
        app:layout_constraintTop_toTopOf="@id/vh_adminusers_user_profile_pic"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/vh_adminusers_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Email"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/vh_adminusers_user_profile_pic"
        app:layout_constraintEnd_toStartOf="@+id/vh_adminusers_balance"
        app:layout_constraintStart_toEndOf="@id/vh_adminusers_user_profile_pic"
        app:layout_constraintTop_toBottomOf="@id/vh_adminusers_name"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/vh_adminusers_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="$$$"
        app:layout_constraintBottom_toBottomOf="@+id/vhadminusers_btn_withdraw"
        app:layout_constraintEnd_toStartOf="@+id/vhadminusers_btn_withdraw"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/vhadminusers_btn_withdraw" />


    <TextView
        android:id="@+id/vhadminusers_btn_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_btn_square_blue"
        android:paddingStart="6dp"
        android:paddingTop="3dp"
        android:paddingEnd="6dp"
        android:paddingBottom="3dp"
        android:text="withdraw"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vhadminusers_btn_deposit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vhadminusers_btn_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_btn_square_blue"
        android:paddingStart="6dp"
        android:paddingTop="3dp"
        android:paddingEnd="6dp"
        android:paddingBottom="3dp"
        android:text="deposit"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/dividerColor"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>