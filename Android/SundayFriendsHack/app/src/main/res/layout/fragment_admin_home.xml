<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragadminhome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lightPurple"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Home"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fragadminhome_toolbar_profile_pic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/fraguserhome_tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="24dp"
        android:text="Hi, James \n\nHave a nice day \nSaturday, November 21"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragadminhome_toolbar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fraguserhome_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <RelativeLayout
        android:id="@+id/square1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/square1color"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintDimensionRatio="W, 1:1"
        app:layout_constraintEnd_toStartOf="@+id/fraguserhome_vertical_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fraguserhome_tv_balance">

        <TextView
            android:id="@+id/static_my_tickets_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Action"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/static_my_tickets_amount"
            android:layout_marginTop="48dp"
            app:srcCompat="@drawable/ic_square1_img" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>