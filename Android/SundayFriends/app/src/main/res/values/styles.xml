<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>

    <!-- Creates blue progress bar -->
    <style name="primaryColorProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="alertDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="FragmentDialogAnim">
        <item name="android:windowEnterAnimation">@anim/loginactivity_left_to_right</item>
        <item name="android:windowExitAnimation">@anim/loginactivity_right_to_left</item>
    </style>


</resources>
